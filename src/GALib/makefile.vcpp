all: lib

lib:
	cd ga
	nmake /nologo /f makefile.vcpp
	cd ..

ex:
	cd examples
	nmake /nologo /f makefile.vcpp
	cd ..

test:
	cd examples
	nmake /nologo /f makefile.vcpp test
	cd ..

clean:
	cd ga
	nmake /nologo /f makefile.vcpp clean
	cd ..
	cd examples
	nmake /nologo /f makefile.vcpp clean
	cd ..

install:
	cd ga
	nmake /nologo /f makefile.vcpp install
	cd ..
