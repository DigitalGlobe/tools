% Chapter titles for source code documentation chapters.

\def\@makechapterhead#1{%
%  \vspace*{10\p@}%
  \hfill
  {\parindent \z@ \raggedright \normalfont
    \ifnum \c@secnumdepth >\m@ne
      \if@mainmatter
        \fontsize{18}{20}\bfseries \@chapapp\space \thechapter
        \par\nobreak
        \vskip 30\p@
      \fi
    \fi
    \interlinepenalty\@M
    \fontsize{20}{22} \bfseries #1\par\nobreak
    \vskip 20\p@
    \hrulefill
    \vskip 40\p@
  }}


