      "setup/me2me_native_messaging_host_main.cc",
      "setup/me2me_native_messaging_host_main.h",
      "setup/start_host_main.cc",
      "setup/start_host_main.h",
      "win/chromoting_lib.rc",
      "win/chromoting_module.cc",
      "win/chromoting_module.h",
      "win/core.cc",
      "win/core_resource.h",
      "win/host_service.cc",
      "win/host_service.h",
      "win/omaha.cc",
      "win/omaha.h",
